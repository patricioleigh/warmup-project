# =============================================================================
# SERVER - ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env and fill in the actual values
# NEVER commit .env files with real secrets to version control
# =============================================================================

# -----------------------------------------------------------------------------
# Application Environment
# -----------------------------------------------------------------------------
# Environment: development | test | production
NODE_ENV=development

# Server port
PORT=3001

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
# MongoDB connection string
# Format: mongodb://[username:password@]host[:port]/database[?options]
MONGO_URI=mongodb://root:rootpass@localhost:27017/warmupdb?authSource=admin

# -----------------------------------------------------------------------------
# Redis Cache Configuration
# -----------------------------------------------------------------------------
# Redis connection URL
REDIS_URL=redis://localhost:6379

# Cache TTL in seconds (default: 3900 = 65 minutes)
REDIS_TTL_SECONDS=3900

# -----------------------------------------------------------------------------
# JWT Authentication
# -----------------------------------------------------------------------------
# Secret key for signing JWT tokens (minimum 16 characters)
# Generate a secure random string: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-me-in-production

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------
# Time window for rate limiting in seconds (default: 8000ms)
RATE_LIMIT_TTL_SECONDS=60

# Maximum number of requests per time window (default: 10)
RATE_LIMIT_LIMIT=100

# -----------------------------------------------------------------------------
# Application Limits
# -----------------------------------------------------------------------------
# Maximum number of items to fetch/display
MAX_ITEMS=100

# Maximum response size in bytes (default: 256KB = 262144 bytes)
MAX_RESPONSE_BYTES=262144

# -----------------------------------------------------------------------------
# Hacker News API Configuration
# -----------------------------------------------------------------------------
# HTTP timeout for Hacker News API requests in milliseconds
HN_HTTP_TIMEOUT_MS=5000

# -----------------------------------------------------------------------------
# Optional: Instance Identification
# -----------------------------------------------------------------------------
# Unique identifier for this application instance (used for distributed jobs)
# If not set, will use HOSTNAME or generate a random UUID
# INSTANCE_ID=instance-01
